{# BUILD INHERITANCE EDGES #}
{%- macro build_parents(node) -%}
    {%- for parent in node.parents -%}
        {{ parent.name}} -> {{node.name}} [ style=dashed arrowhead=empty];
    {% endfor -%}
    {%- if node.metaclass is not none -%}
        {{ node.metaclass.name }} -> {{node.name}} [style=dashed color="royalblue2"];
    {%- endif -%}
{%- endmacro -%}

{# BUILD DEPENDENCY EDGES #}
{%- macro build_dependencies(node) -%}
    {%- for dep in node.deps -%}
        {{ dep.name}} -> {{node.name}}
    {% endfor -%}
{%- endmacro -%}